lexical ho
lexical hi = () {
	local cont = ho
	local count = 0
	while (count != 1000) {
		"hi " + count.to_string_primitive -> $stdout
		count = (count + 1 -> cont : cont)
	}
}

lexical ho = (&count) -> cont {
	while (true) {
		"ho " + count.to_string_primitive -> $stdout
		count = (count + 1 -> cont : cont)
	}
}

hi()